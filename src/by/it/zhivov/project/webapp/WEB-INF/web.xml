<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0"
         metadata-complete="true">
    <display-name>Servlet controller</display-name>

    <welcome-file-list>
        <welcome-file>index</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>FrontController</servlet-name>
        <servlet-class>by.it.zhivov.project.java.controller.FrontController</servlet-class>
        <multipart-config/>
    </servlet>

    <servlet-mapping>
        <servlet-name>FrontController</servlet-name>
        <url-pattern>/do</url-pattern>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>EncodFilter</filter-name>
        <filter-class>by.it.zhivov.project.java.filters.EncodeFilter</filter-class>
        <init-param>
            <param-name>encode</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>EncodFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>ImagesFilter</filter-name>
        <filter-class>by.it.zhivov.project.java.filters.ImagesFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ImagesFilter</filter-name>
        <url-pattern>/images/*</url-pattern>
    </filter-mapping>
</web-app>
